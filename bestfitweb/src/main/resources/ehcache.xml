          maxElementsInMemory="100"
          eternal="false"
          timeToIdleSeconds="120"
          timeToLiveSeconds="120"
          overflowToDisk="false"  
  />
  <!-- ResponseMessageMap -->

  <!-- GlobalLookup -->
  <cache  name="aero.sita.ads.cce.dal.configuration.dto.GlobalLookup"
          maxElementsInMemory="150"
          eternal="false"
          timeToIdleSeconds="120"
