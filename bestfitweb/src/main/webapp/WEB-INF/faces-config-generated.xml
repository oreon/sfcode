<?xml version="1.0" encoding="UTF-8"?>

<faces-config> 
  <!-- navigation rules for home.jsp -->  
  <navigation-rule> 
    <from-view-id>home.jsp</from-view-id>  
    <navigation-case> 
      <from-outcome>register</from-outcome>  
      <to-view-id>/register.jsp</to-view-id> 
    </navigation-case>  
    <navigation-case> 
      <from-outcome>forgotPassword</from-outcome>  
      <to-view-id>/forgotPassword.jsp</to-view-id> 
    </navigation-case>  
    <navigation-case> 
      <from-outcome>browse</from-outcome>  
      <to-view-id>/browseProducts.jsp</to-view-id> 
    </navigation-case>  
    <navigation-case> 
      <from-outcome>login</from-outcome>  
      <to-view-id>/verifyLogin.jsp</to-view-id> 
    </navigation-case>  
    <navigation-case> 
      <from-outcome>login</from-outcome>  
      <to-view-id>/verifyLogin.jsp</to-view-id> 
    </navigation-case> 
  </navigation-rule>  
  <!-- navigation rules for forgotPassword.jsp -->  
  <navigation-rule> 
    <from-view-id>forgotPassword.jsp</from-view-id>  
    <navigation-case> 
      <from-outcome>goHome</from-outcome>  
      <to-view-id>/home.jsp</to-view-id> 
    </navigation-case> 
  </navigation-rule>  
  <!-- navigation rules for welcome.jsp -->  
  <navigation-rule> 
    <from-view-id>welcome.jsp</from-view-id> 
  </navigation-rule>  
  <!-- navigation rules for register.jsp -->  
  <navigation-rule> 
    <from-view-id>register.jsp</from-view-id>  
    <navigation-case> 
      <from-outcome>failure</from-outcome>  
      <to-view-id>/register.jsp</to-view-id> 
    </navigation-case>  
    <navigation-case> 
      <from-outcome>success</from-outcome>  
      <to-view-id>/welcome.jsp</to-view-id> 
    </navigation-case> 
  </navigation-rule>  
  <!-- navigation rules for browseProducts.jsp -->  
  <navigation-rule> 
    <from-view-id>browseProducts.jsp</from-view-id>  
    <navigation-case> 
      <from-outcome>exit</from-outcome>  
      <to-view-id>/end.jsp</to-view-id> 
    </navigation-case> 
  </navigation-rule> 
</faces-config>
