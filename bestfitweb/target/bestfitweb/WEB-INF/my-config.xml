<?xml version="1.0"?>
<!DOCTYPE faces-config PUBLIC
  "-//Sun Microsystems, Inc.//DTD JavaServer Faces Config 1.0//EN"
  "http://java.sun.com/dtd/web-facesconfig_1_1.dtd" >

<faces-config>
	
	<!-- managed beans of the simple hello world app -->
	<managed-bean>
		<managed-bean-name>helloBean</managed-bean-name>
		<managed-bean-class>com.oreon.bestfit.HelloBean</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>	
	<managed-bean>
		<managed-bean-name>helloAction</managed-bean-name>
		<managed-bean-class>com.oreon.bestfit.HelloAction</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>	
	
	<managed-bean>
		<managed-bean-name>customerCrudBacking</managed-bean-name>
		<managed-bean-class>bizobjects.web.jsf.CustomerBackingBean</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>	


        <!-- navigation rules for index.xhtml -->
        <navigation-rule>
                <from-view-id>/index.xhtml</from-view-id>
                <navigation-case>
                        <from-outcome>success</from-outcome>
                        <to-view-id>/hello.xhtml</to-view-id>
                </navigation-case>
        </navigation-rule>

</faces-config>
